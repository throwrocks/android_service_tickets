<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardViewd xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ticket_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ticket_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World" />

            <TextView
                android:id="@+id/org"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World" />

            <TextView
                android:id="@+id/site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardViewd>